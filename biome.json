{
    "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
    "root": true,
    "files": {
      "ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/.git/**",
        "**/__pycache__/**",
        "**/*.pyc"
      ]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    }
  }